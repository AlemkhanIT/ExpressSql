{% extends 'base.twig' %}

{% block content %}
    <div class="container mt-5 mb-10">
        <div class="row">
            <div class="col-lg-8">
                <article>
                    <header class="mb-4">
                        <h1 class="fw-bolder mb-1">{{ post.title }}</h1>
                        <div class="text-muted fst-italic mb-2">{{ post.created_at }} by {{ post.login }}</div>
                        <span class="badge bg-secondary text-decoration-none link-light">{{ post.name }}</span>
                    </header>

                    <!-- Post content-->
                    <section class="mb-5">
                        <p class="fs-5 mb-4 overflow-wrap-break-word">{{ post.text }}</p>
                    </section>
                </article>
                <!-- Comments section-->
                <section class="mb-10">
                    <div class="card bg-light">
                        <div class="card-body">
                            <!-- Comment form-->
                            <form class="mb-4"><textarea class="form-control" rows="3" placeholder="Join the discussion and leave a comment!"></textarea>
                                <button class="btn btn-lg btn-block btn-success rounded-0  my-3 bg-op-6 roboto-bold">Send</button></form>
                            <!-- Comment with nested comments-->
                            {% for comment in comments %}
                            <div class="d-flex mb-4">
                                <!-- Parent comment-->


                                <div class="ms-3">
                                    <div class="fw-bold">{{ comment.commenter_name }}</div>
                                    {{ comment.comment_text }}
                                </div>

                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </div>
            <!-- Side widgets-->
            <div class="col-lg-4">
                <!-- Categories widget-->
                <div class="card mb-4">
                    <div class="card-header">Place</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <ul class="list-unstyled mb-0">
                                    <li>Mesto: {{ post.city }}</li>
                                    <li>Adresa: {{ post.address }}</li>
                                    <li>Datum Konania: {{ post.formatted_date }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">Description</div>
                    <div class="card-body">{{post.description}}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}