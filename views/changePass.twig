{% extends 'base.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card my-5">
                    <form action="/user/changePass" method="post" class="card-body cardbody-color p-lg-5">
                        <div class="text-center">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                 width="200px" alt="profile">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" name="pass1" placeholder="password">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password1" name="pass2" placeholder="password repeat">
                        </div>
                        <div class="text-center"><button type="submit" class="btn btn-dark px-5 mb-5 w-100">Zmenit' Heslo</button></div>
                        {% for message in errors %}
                            <div class="alert alert-danger" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for message in messages %}
                            <div class="alert alert-success" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock %}